<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Davshan</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <header>
    <h1>
      <%= link_to "home", root_url %>
    </h1>
    <nav>
      <menu>
        <% if user_signed_in? %>
          <li>
            <%= link_to( current_user ) do %>
              <%= image_tag current_user.avatar_url(24), :alt => "small avatar of #{current_user}" %>
              <%= current_user %>
            <% end %>
          </li>
          <li><%= link_to :sign_out, destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <li><%= link_to :sign_in, new_user_session_path %></li>
          <li><%= link_to :sign_up, new_user_registration_path %></li>
        <% end %>
      </menu>
    </nav>
  </header>
  <section id="notifications">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </section>
  
  <section id="content">
    <%= yield %>
  </section>
  
  <footer>
    This application is a response to <%= link_to "http://li.mk/o", 'http://li.mk/o' %> by airy
  </footer>

</body>
</html>
